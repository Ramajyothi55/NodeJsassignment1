<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Players</title>
</head>
<body>
  <h1>Player Information</h1>
  <% if (player) { %>
    <h2>Name: <%= player.name %></h2>
    <p>Age: <%= player.age %></p>
    <!-- Add more player details as needed -->

    <!-- Display songs -->
    <h3>Songs:</h3>
    <ul>
      <% player.songs.forEach(song => { %>
        <li><%= song.title %> - Genre: <%= song.genre %></li>
      <% }); %>
    </ul>
    
    <!-- Add image -->
    <img src="<%= player.image %>" alt="<%= player.name %>'s Image">

    <!-- Add Next button to navigate to the next player -->
    <a href="/players/next">Next Player</a>
  <% } else { %>
    <p>No player found</p>
  <% } %>
</body>
</html>